doctype html
html
  head
    title doudou
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/lib/bootstrap.min.css')
    link(rel='stylesheet', href='/css/doudou.css')
    script(src='/js/lib/jquery-1.11.2.min.js')
    script(src='/js/lib/bootstrap.min.js')
  body
    .container(style='text-align: center; padding-top: 50px;')
      // h1 Welcome ~
      // h1 h1 This is Doudou
      br
      .row
        form.form-horizontal.col-lg-4.col-lg-offset-4(action='/login', method='POST', role='form')
          .form-group
            .col-lg-12
              input.form-control.input-lg(name='name', type='text', placeholder='Username')
          .form-group
            .col-lg-12
              input.form-control.input-lg(name='pwd', type='password', placeholder='Password')
          if error
            .form-group
              .col-lg-8.col-lg-offset-2.alert.alert-danger
                p #{ error }
          .form-group
            input.col-lg-4.col-lg-offset-1.btn.btn-lg.btn-default(type='submit', value='Login')
            a.col-lg-4.col-lg-offset-2.btn.btn-lg.btn-default(href='/register') Register
