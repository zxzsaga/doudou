extend layout

append body
  .container
    .row
      .col-lg-6.col-lg-offset-2
        each game in games
          .panel.panel-default
            .panel-body
              .row
                .col-lg-4
                  img(src=game.coverUrl, alt='cover')
                .col-lg-8
                  a(href='/game/main/' + game._id)
                    p #{ game.name }
                  p 平台: #{ game.platform }
                  p 开发者: #{ game.developer }
                  p 介绍: #{ game.description }
